{
  "name": "FiveMAddonWeaponToolkit",
  "version": "1.0.0",
  "description": "A toolkit for creating FiveM addon weapons.",
  "main": "main.js",
  "scripts": {
    "start": "electron main.js",
    "test": "jest",
    "dist": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Hxrv3y/FiveM-Addon-Weapon-Toolkit-new.git"
  },
  "keywords": [
    "fivem",
    "gta5",
    "weapon",
    "toolkit",
    "electron"
  ],
  "author": "Harv",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/Hxrv3y/FiveM-Addon-Weapon-Toolkit-new/issues"
  },
  "homepage": "https://github.com/Hxrv3y/FiveM-Addon-Weapon-Toolkit-new#readme",
  "dependencies": {
    "fast-xml-parser": "^4.3.5",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "electron": "^28.2.1",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0"
  },
  "build": {
    "appId": "com.hxrvy.fivemaddonweapontoolkit",
    "productName": "FiveM Addon Weapon Toolkit",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.html",
      "styles.css",
      "main.js",
      "renderer.js",
      "preload.js",
      "package.json", 
      "templates/weapons/**/*",
      "templates/components/**/*",
      "display_names.json",
      "config_options.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis", 
          "arch": ["x64"] 
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico"
    }, 
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}